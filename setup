#!/bin/bash

apt autoremove -y game-repo science-repo && apt update && apt full-upgrade -y && pkg install -y root-repo unstable-repo x11-repo python wget git vim figlet toilet neofetch && apt update && apt full-upgrade -y && /data/data/com.termux/files/usr/bin/python3 -m pip install --upgrade pip && pip install lolcat cowsay bs4 requests python-nmap pymetasploit3 && chmod +x extra_keys && echo -e "clear && nh -r" > .bashrc && wget -O nethunter https://offs.ec/2MceZWr && chmod +x nethunter && bash nethunter && echo -e "clear && apt install -y python3 python3-pip figlet toilet neofetch maven vim nmap fonts-thai-tlwg golang golang-* kali-tools-* && wget -O ngrok.zip https://bin.equinox.io/c/4VmDzA7iaHb/ngrok-stable-linux-arm.zip && unzip ngrok.zip && mv ngrok /usr/bin/ngrok && wpscan --update && clear && apt update && echo -e 'Nethunter setup completed!' && apt full-upgrade -y" > $HOME/kali-arm64/root/nh_setup 
chmod +x $HOME/kali-arm64/root/nh_setup && nh -r && bash nh_setup